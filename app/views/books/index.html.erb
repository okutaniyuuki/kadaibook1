




<main >
  
	<div class="main1">
		<h1>Books</h1>
	 

     <table>
     	<tr>
     		<th>title</th> <th>body</th>
     	</tr>
       

      <% @books.each do |book| %>
    <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td><%= link_to "Show",book_path(book) %> </td>
       <td><%= link_to "Edit",edit_book_path(book) %></td>
       <td><%= link_to "Destroy",book_path(book),method: :delete,"data-confirm": "Are you sure?"
 %></td>



    </tr>
    <% end %>

   </table>





	</div>




<div class="main2">


<h2> New book</h2>

<%= form_for(@book) do |f| %>
<%= render 'books/error_messages', book: @book %>

<h3>titie</h3>

<%= f.text_field  :title  %>

<h3>body</h3>
<%= f.text_field  :body  %><br>

<%=  f.submit  'Create Book' %>

  <% end  %>


	</div>




</main>
